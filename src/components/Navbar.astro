---
// src/components/Navbar.astro
const pathname = new URL(Astro.request.url).pathname;
---
<nav class="flex justify-between items-center p-6 bg-zinc-900 text-white shadow-lg">
  <div class="text-xl font-bold tracking-tight text-indigo-500">
    <a href="/">MonPortfolio</a>
  </div>
  
  <ul class="flex gap-8 list-none">
    <li>
      <a href="/cv" class={`hover:text-indigo-400 transition-colors ${pathname === '/cv' ? 'text-indigo-500 font-semibold' : ''}`}>
        CV
      </a>
    </li>
    <li>
      <a href="/projets" class={`hover:text-indigo-400 transition-colors ${pathname === '/projets' ? 'text-indigo-500 font-semibold' : ''}`}>
        Projets
      </a>
    </li>
  </ul>
</nav>