---
// Component for displaying work experience/internships
import type { Internship } from "../../data/cvData";

interface Props {
    internships: Internship[];
}

const { internships } = Astro.props;
---

<section>
    <h2 class="text-2xl font-bold text-zinc-900 mb-8 flex items-center gap-3">
        <span class="w-8 h-[2px] bg-indigo-500"></span> Internships
    </h2>
    <div class="space-y-10">
        {
            internships.map((internship) => (
                <div class="relative group">
                    <h3 class="text-lg font-bold text-zinc-800 group-hover:text-indigo-600 transition-colors italic">
                        {internship.title}
                    </h3>

                    <p class="text-indigo-500 text-sm font-semibold">
                        {internship.company} ({internship.location}) |{" "}
                        {internship.period}
                    </p>

                    <p class="mt-2 text-xs font-medium text-zinc-500 uppercase tracking-wider">
                        {internship.category}
                    </p>

                    <ul class="mt-4 space-y-3">
                        {internship.achievements.map((achievement) => (
                            <li class="flex gap-3 text-sm text-zinc-600 leading-relaxed">
                                <span class="text-indigo-500 mt-1.5 leading-none">
                                    â€¢
                                </span>
                                <span>{achievement}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            ))
        }
    </div>
</section>
