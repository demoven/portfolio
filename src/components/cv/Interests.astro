---
// Component for displaying personal interests
import type { Interest } from "../../data/cvData";

interface Props {
    interests: Interest[];
}

const { interests } = Astro.props;
---

<section>
    <h2
        class="text-xs font-bold uppercase tracking-[0.2em] text-zinc-400 mb-6 md:text-left"
    >
        Interests
    </h2>
    <div class="space-y-6">
        {
            interests.map((interest) => (
                <div class="flex items-start gap-3">
                    <div class="p-2 bg-zinc-50 rounded-lg text-zinc-500">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-4 h-4"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d={interest.iconPath} />
                            {interest.title === "Music" && (
                                <circle cx="6" cy="18" r="3" />
                            )}
                            {interest.title === "Music" && (
                                <circle cx="18" cy="16" r="3" />
                            )}
                        </svg>
                    </div>
                    <div>
                        <h3 class="text-sm font-bold text-zinc-800">
                            {interest.title}
                        </h3>
                        <p class="text-xs text-zinc-500 leading-relaxed">
                            {interest.description}
                        </p>
                    </div>
                </div>
            ))
        }
    </div>
</section>
