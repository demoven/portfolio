---
// Component for displaying personal interests
import type { Interest } from "../../data/cvData";

interface Props {
    interests: Interest[];
}

const { interests } = Astro.props;
---

<section>
    <h2
        class="text-xs font-bold uppercase tracking-[0.2em] text-zinc-400 mb-6 md:text-left"
    >
        Interests
    </h2>
    <div class="space-y-6">
        {
            interests.map((interest) => (
                <div class="flex items-start gap-3">
                    <div class="p-2 bg-zinc-50 rounded-lg text-zinc-500">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-4 h-4"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d={interest.iconPath} />
                            {interest.title === "Music" && (
                                <circle cx="6" cy="18" r="3" />
                            )}
                            {interest.title === "Music" && (
                                <circle cx="18" cy="16" r="3" />
                            )}
                        </svg>
                    </div>
                    <div class="flex-1">
                        <h3 class="text-sm font-bold text-zinc-800">
                            {interest.title}
                        </h3>
                        <p class="text-xs text-zinc-500 leading-relaxed">
                            {interest.description}
                        </p>
                        {interest.countries && (
                            <div class="flex flex-wrap gap-2 mt-3">
                                {interest.countries.map((country) => (
                                    <div class="inline-flex items-center gap-1.5 px-2.5 py-1 bg-gradient-to-br from-zinc-50 to-zinc-100 border border-zinc-200 rounded-full text-xs font-medium text-zinc-700 hover:shadow-sm transition-shadow">
                                        <span>{country.name}</span>
                                        {country.visits > 1 && (
                                            <span class="text-zinc-500">
                                                ({country.visits}x)
                                            </span>
                                        )}
                                    </div>
                                ))}
                            </div>
                        )}
                    </div>
                </div>
            ))
        }
    </div>
</section>
