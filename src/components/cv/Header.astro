---
// Component for CV header with personal info and social links
import GithubIcon from "../icons/social/GithubIcon.astro";
import LinkedinIcon from "../icons/social/LinkedinIcon.astro";
import MailIcon from "../icons/social/MailIcon.astro";
import PhoneIcon from "../icons/PhoneIcon.astro";
import DownloadIcon from "../icons/DownloadIcon.astro";

interface Props {
    name: string;
    title: string;
    phone: string;
    email: string;
    cvPdfUrl: string;
    github: string;
    linkedin: string;
}

const { name, title, phone, email, cvPdfUrl, github, linkedin } = Astro.props;
---

<header
    class="border-b border-zinc-200 pb-8 flex flex-col md:flex-row justify-between items-center md:items-end gap-6"
>
    <div class="text-center md:text-left">
        <h1 class="text-4xl font-bold text-zinc-900 tracking-tight">{name}</h1>
        <p class="text-xl text-indigo-600 font-medium mt-1">{title}</p>
        <p
            class="text-sm text-zinc-500 mt-2 flex items-center justify-center md:justify-start gap-2"
        >
            <PhoneIcon class="w-4 h-4" />
            {phone}
        </p>
    </div>

    <div class="flex flex-col items-center md:items-end gap-4">
        <a
            href={cvPdfUrl}
            download
            class="flex items-center gap-2 px-4 py-2 bg-zinc-900 text-white text-sm font-bold rounded-lg hover:bg-indigo-600 transition-all shadow-lg hover:shadow-indigo-200 active:scale-95"
        >
            <DownloadIcon class="w-4 h-4" />
            Download PDF
        </a>

        <div class="flex gap-5 items-center">
            <a
                href={github}
                target="_blank"
                class="text-zinc-500 hover:text-black transition-colors"
                title="GitHub"
                aria-label="Visit my GitHub profile"
            >
                <GithubIcon class="w-7 h-7" />
            </a>
            <a
                href={linkedin}
                target="_blank"
                class="text-zinc-500 hover:text-[#0077B5] transition-colors"
                title="LinkedIn"
                aria-label="Visit my LinkedIn profile"
            >
                <LinkedinIcon class="w-7 h-7" />
            </a>
            <a
                href={`mailto:${email}`}
                class="text-zinc-500 hover:text-indigo-500 transition-colors"
                title="Email"
                aria-label="Send me an email"
            >
                <MailIcon class="w-7 h-7" />
            </a>
        </div>
    </div>
</header>
