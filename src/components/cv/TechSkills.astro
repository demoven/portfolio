---
// Component for displaying tech skills with logos
import { Image } from "astro:assets";
import type { TechSkill } from "../utils/techLogos";

interface Props {
    skills: TechSkill[];
}

const { skills } = Astro.props;
---

<section>
    <h2 class="text-xs font-bold uppercase tracking-[0.2em] text-zinc-400 mb-6">
        Technologies & Tools
    </h2>
    <div class="flex flex-wrap gap-3">
        {
            skills.map((skill) => (
                <div class="flex items-center gap-2 px-3 py-1.5 rounded-full border border-zinc-100 bg-zinc-50/50 shadow-sm hover:border-indigo-200 hover:bg-white transition-all">
                    <Image src={skill.logo} alt={skill.name} class="w-4 h-4" />
                    <span class="text-xs font-semibold text-zinc-700">
                        {skill.name}
                    </span>
                </div>
            ))
        }
    </div>
</section>
