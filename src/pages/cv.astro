---
import Layout from "../layouts/Layout.astro";
import Header from "../components/cv/Header.astro";
import TechSkills from "../components/cv/TechSkills.astro";
import Languages from "../components/cv/Languages.astro";
import Interests from "../components/cv/Interests.astro";
import Internships from "../components/cv/Internships.astro";
import Education from "../components/cv/Education.astro";

// Import data
import { techSkills } from "../utils/techLogos";
import {
  personalInfo,
  languages,
  interests,
  internships,
  education,
} from "../data/cvData";
---

<Layout title="CV | ThÃ©o Fernando">
  <div class="max-w-4xl mx-auto space-y-12">
    <Header {...personalInfo} />

    <TechSkills skills={techSkills} />

    <hr class="border-zinc-100" />

    <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
      <aside class="space-y-8">
        <Languages languages={languages} />
        <Interests interests={interests} />
      </aside>

      <div
        class="md:col-span-2 space-y-12 border-l border-zinc-100 md:pl-10 relative"
      >
        <Internships internships={internships} />
        <Education educationList={education} />
      </div>
    </div>
  </div>
</Layout>
