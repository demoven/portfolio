---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import ProjectCard from "../components/projects/ProjectCard.astro";

// Retrieve all projects from the content folder
const projects = await getCollection("projects");

// Sort projects by date (newest first)
projects.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime(),
);
---

<Layout title="My Projects | ThÃ©o Fernando">
  <div class="max-w-5xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <h1
      class="text-4xl font-bold text-zinc-900 text-center mb-10 tracking-tight"
    >
      My Projects
    </h1>
    <p class="text-lg text-zinc-600 text-center mb-12 max-w-2xl mx-auto">
      Discover my latest work, from full-stack web applications to machine
      learning experiments and 3D simulations.
    </p>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        projects.map((project, index) => (
          <ProjectCard project={project} index={index} />
        ))
      }
    </div>
  </div>
</Layout>
